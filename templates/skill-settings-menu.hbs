<form class="{{cssClass}}" autocomplete="off">
    <div class="skill-settings-body">
        <div>
            <h2>{{localize "WITCHER.StInt"}}</h2>
            {{#each skills.int}}
            <div class="skill-setting">
                <label for="{{name}}">{{localize name}}</label>
                <input type="checkbox" id="{{name}}" name="{{@key}}-int" {{checked active}}>
            </div>
            {{/each}}
        </div>
        <div>
            <h2>{{localize "WITCHER.StCra"}}</h2>
            {{#each skills.cra}}
            <div class="skill-setting">
                <label for="{{name}}">{{localize name}}</label>
                <input type="checkbox" id="{{name}}" name="{{@key}}-cra" {{checked active}}>
            </div>
            {{/each}}
        </div>
